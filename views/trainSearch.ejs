<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results - Train Search</title>
    <link rel="stylesheet" href="/public/style.css">
</head>
<body>
    <header>
        <h1>Train Search Results</h1>
    </header>

    <main>
        <% if (trains.length > 0) { %>
            <ul>
                <% trains.forEach(function(train) { %>
                    <li><%= train.trainName %> from <%= train.source %> to <%= train.destination %> | Departure: <%= train.departureTime %></li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No trains found.</p>
        <% } %>
    </main>
</body>
</html>
